<% layout("/layouts/boilerplate") %>

<body>
  <div class="container mt-4">

    <!-- Category Filters -->
    <div id="filters" class="d-flex flex-wrap justify-content-center mb-4 gap-3">
      <% categories.forEach(cat => { %>
        <a href="/listings/category/<%= cat.name %>" 
           class="filter text-center p-2 rounded <%= selectedCategory === cat.name ? 'active-filter' : '' %>">
          <i class="<%= cat.iconClass || 'fa-solid fa-circle' %> fa-2x"></i><br>
          <small><%= cat.name %></small>
        </a>
      <% }) %>
      <a href="/" class="filter text-center p-2 rounded <%= !selectedCategory ? 'active-filter' : '' %>">
        <i class="fa-solid fa-list fa-2x"></i><br>
        <small>All</small>
      </a>
    </div>

    <!-- Listings Grid -->
    <div class="row g-4">
      <% allListings.forEach(listing => { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card listing-card h-100 shadow-sm">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text mb-1">&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %></p>
                <p class="card-text text-muted" style="font-size: 0.85rem;"><%= listing.location %>, <%= listing.country %></p>
                <span class="badge bg-primary"><%= listing.category.name %></span>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>

  </div>

  <!-- Custom CSS -->
  <style>
    body {
      background: #f8f9fa;
      font-family: 'Arial', sans-serif;
    }

    #filters .filter {
      background: #ffffff;
      border: 1px solid #ddd;
      transition: all 0.2s;
      width: 80px;
    }

    #filters .filter:hover {
      background: #007bff;
      color: #fff;
      transform: translateY(-3px);
      text-decoration: none;
    }

    #filters .active-filter {
      background: #007bff;
      color: #fff;
      border-color: #007bff;
    }

    .listing-card {
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .listing-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .card-body h5 {
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
    }

    .card-body .badge {
      margin-top: 5px;
    }

    @media (max-width: 576px) {
      #filters .filter {
        width: 60px;
        font-size: 0.75rem;
      }
      .card-body h5 {
        font-size: 1rem;
      }
    }
  </style>
</body>
