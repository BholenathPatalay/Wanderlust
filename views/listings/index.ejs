<% layout("/layouts/boilerplate") %>

<!-- Search + Price Filter -->
<form class="row g-2 mb-3" method="GET" action="/">
  <div class="col-sm-12 col-md-4">
    <input type="text" name="search" class="form-control" placeholder="Search by title or location" value="<%= search %>">
  </div>
  <div class="col-sm-6 col-md-2">
    <input type="number" name="minPrice" class="form-control" placeholder="Min Price" value="<%= minPrice %>">
  </div>
  <div class="col-sm-6 col-md-2">
    <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" value="<%= maxPrice %>">
  </div>
  <div class="col-sm-12 col-md-4">
    <button type="submit" class="btn btn-primary w-100">Filter</button>
  </div>
</form>

<!-- Category Filters -->
<div id="filters" class="d-flex flex-wrap justify-content-center mb-4 gap-3">
  <% categories.forEach(cat => { %>
    <a href="/?category=<%= cat.name %>" class="filter text-center p-2 rounded <%= selectedCategory === cat.name ? 'active-filter' : '' %>">
      <i class="<%= cat.iconClass || 'fa-solid fa-circle' %> fa-2x"></i><br>
      <small><%= cat.name %></small>
    </a>
  <% }) %>
  <a href="/" class="filter text-center p-2 rounded <%= !selectedCategory ? 'active-filter' : '' %>">
    <i class="fa-solid fa-list fa-2x"></i><br>
    <small>All</small>
  </a>
</div>

<!-- Listings Grid -->
<div class="row g-4">
  <% allListings.forEach(listing => { %>
    <div class="col-sm-6 col-md-4 col-lg-3">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card listing-card h-100 shadow-sm">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
          <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text mb-1">&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %></p>
            <p class="card-text text-muted" style="font-size: 0.85rem;"><%= listing.location %>, <%= listing.country %></p>
            <span class="badge bg-primary"><%= listing.category.name %></span>
          </div>
        </div>
      </a>
    </div>
  <% }) %>
</div>

<!-- Pagination -->
<% if(totalPages > 1) { %>
<nav class="mt-4">
  <ul class="pagination justify-content-center flex-wrap">
    <% for(let i=1; i<=totalPages; i++) { %>
      <li class="page-item <%= i===page ? 'active' : '' %>">
        <a class="page-link" href="?<%= selectedCategory ? 'category=' + selectedCategory + '&' : '' %>search=<%= search %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&page=<%= i %>"><%= i %></a>
      </li>
    <% } %>
  </ul>
</nav>
<% } %>

<style>
#filters .filter { background:#fff; border:1px solid #ddd; transition: all 0.2s; width:80px; }
#filters .filter:hover { background:#007bff; color:#fff; transform: translateY(-3px); text-decoration:none; }
#filters .active-filter { background:#007bff; color:#fff; border-color:#007bff; }
.listing-card { transition: transform 0.2s, box-shadow 0.2s; }
.listing-card:hover { transform: translateY(-5px); box-shadow: 0 8px 20px rgba(0,0,0,0.15); }
@media(max-width:576px){ #filters .filter{ width:60px; font-size:0.75rem; } }
</style>
